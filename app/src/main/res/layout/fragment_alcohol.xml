<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".app.form.screening.AlcoholFragment">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"

        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_margin="10dp"
                android:text="สุรา"
                />

            <RadioGroup
                android:id="@+id/rdoDrinking"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <RadioButton
                    android:id="@+id/rdoDrinking1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/drink_1b600"
                    />
                <RadioButton
                    android:id="@+id/rdoDrinking2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/drink_1b601"
                    />
                <RadioButton
                    android:id="@+id/rdoDrinking3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/drink"
                    />
                <RadioGroup
                    android:id="@+id/rdoDrinkingFrequency"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <RadioButton
                        android:id="@+id/rdoDrinkingFrequency1"
                        android:layout_marginLeft="20dp"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:text="@string/once_in_a_while"/>
                    <RadioButton
                        android:id="@+id/rdoDrinkingFrequency2"
                        android:layout_marginLeft="20dp"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:text="@string/occasionally"/>
                    <RadioButton
                        android:id="@+id/rdoDrinkingFrequency3"
                        android:layout_marginLeft="20dp"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:text="@string/regularly"/>
                </RadioGroup>
                <RadioGroup
                    android:id="@+id/rdoDrinkingAlway"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <RadioButton
                        android:id="@+id/rdoDrinkingAlway1"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="40dp"
                        android:text="@string/drink_1b602" />

                    <RadioButton
                        android:id="@+id/rdoDrinkingAlway2"
                        android:layout_marginLeft="40dp"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:text="@string/drink_1b603"/>
                    <RadioButton
                        android:id="@+id/rdoDrinkingAlway3"
                        android:layout_marginLeft="40dp"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:text="@string/drink_1b604"/>


                </RadioGroup>
            </RadioGroup>
        </LinearLayout>
    </androidx.cardview.widget.CardView>


</LinearLayout>