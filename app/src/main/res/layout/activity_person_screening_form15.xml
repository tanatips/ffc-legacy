                        <RadioButton
                            android:layout_marginLeft="20dp"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:text="@string/smoke_occasionally"/>
                        <RadioButton
                            android:layout_marginLeft="20dp"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:text="@string/smoke_regularly"/>
                    </RadioGroup>
                    <RadioGroup
