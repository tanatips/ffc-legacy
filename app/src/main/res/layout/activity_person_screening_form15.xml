        android:layout_height="60dp"
        android:textColor="@color/black"
        android:hint="@string/idcard"
        android:id="@+id/citizenId"
        />
    <EditText
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:textColor="@color/black"
